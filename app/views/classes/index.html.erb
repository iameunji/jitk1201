<div class="margin-top"></div><!--nav margin-->
<div class="container">
    <!-- intro -->
    <div class="row">
        <div class="col-sm-12" style="padding-bottom: 30px">
            <h2 class="page-header darkgray">Notice <small>정 in the kitchen</small></h2>
        </div>
    </div>
    <!-- /.intro -->
    <section>
        <div class="container-fluid control-label-left">
            <!-- List Content Head -->
            <div class="row">
                <div class="col-sm-1"><h4></h4></div>
                <div class="col-sm-6"><h4>글제목</h4></div>
                <div class="col-sm-3"><h4>작성날짜</h4></div>
                <% unless current_user.nil? %>
                    <% if current_user.admin==true %>
                        <div class="col-sm-1"><h4>삭제</h4></div>
                    <% end %>
                <% end %>
                <div class="col-sm-1"><h4></h4></div>
            </div>
            <!--/.List Content Head -->
            <hr/>

            <% @post.each do |p|%>
                <div class="row control-label-left">
                    <div class="col-sm-1"><h4></h4></div>
                    <div class="col-sm-6"><h4><a href="/classes/0/posts/#{p.id}"><%= p.title %></a></h4></div>
                    <div class="col-sm-3"><h4><%= p.created_at.in_time_zone(9) %></h4></div>
                    <% unless current_user.nil? %>
                        <% if current_user.admin==true %>
                            <div class="col-sm-1"><h4><input type="checkbox" <!-- name="item_id[]" value="9 -->"></input>
                        <% end %>
                    <% end %>

                    </h4></div>
                    <div class="col-sm-1"><h4></h4></div>
                </div>
                <hr/>
            <% end %>

            <% unless current_user.nil? %>
                    <% if current_user.admin==true %>
                        <div class="row control-label-right">
                            <a type="submit" class="btn btn-default" role="button" data-confirm="글을 삭제하시겠습니까?">삭제</a>
                            <a class="btn btn-default" href="/posts/new">글쓰기</a>
                        </div> 
                    <% end %>
            <% end %>
        </div>
        <!--/.container-fluid control-label-left-->
        
    </section>


</div>
<!--/.container-->
