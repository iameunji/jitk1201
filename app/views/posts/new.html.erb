<div class="margin-top"></div>

<div class="container">
    <!-- intro -->
    <div class="row">
        <div class="col-sm-12">
            <h2 class="page-header darkgray">관리자 페이지 <small>글 작성하기</small></h2>
        </div>
    </div>
    <!-- /.intro -->

    <section>
      <% if @post.errors.any? %>
        <ul>
      <%= @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
      <% end %>
      <!-- Class Writing Form -->
      <%= bootstrap_form_for(@post, url: {action: "create"}, method: "post") do |f| %>
      <div class="row">
          <!-- article category-->
          <div class="col-sm-2 control-label-left">
          <%= f.select :class_state, options_for_select([["공지사항", 0], ["성인 정규 클래스", 1], ["성인 원데이 클래스", 2], ["요리 책방 꼬르륵", 3], ["주니어 클래스", 4], ["Private 클래스", 5], ["정인더가든", 6]]), label:"카테고리" %>

          </div>
          <!--/.article category-->
          
          <!--class time-->
          <!--이 코드는 성인 정규 클래스, 성인 원데이 클래스, 요리책방 꼬르륵, 주니어클래스, private class에서만 보여줘야함-->
          <div class="col-sm-2 control-label-left">
              <label>클래스 분류</label><br/>
              <%= f.radio_button :am_pm, "am", label:"오전", :checked => true %>
              <%= f.radio_button :am_pm, "pm", label:"오후" %>
          </div>

          <div class="col-sm-2 control-label-left">
              <label>현재/지난</label><br/>
              <%= f.radio_button :time_state, "1", label:"현재", :checked => true %>
              <%= f.radio_button :time_state, "0", label:"지난" %>
          </div>

          <div class="col-sm-2 control-label-left">
              <%= f.text_field :date, label:"날짜" %>
          </div>
          <!--/.class time-->
          <!--article title-->
          <div class="col-sm-12 control-label-left">
              <%= f.text_field :title, label:"제목" %>
          </div>
          <!--/.article title-->

          <!--short wording-->
          <div class="col-sm-12">
              <%= f.text_field :short, label:"간략한 설명"%>
          </div>
          <!--/.short wording-->
          <!--photo-->
          <div class="col-sm-2">
              <%= f.file_field :img, label:"대표사진"%>
          </div>
          <!--/.photo-->
          <!--html editor-->
          <div class="col-sm-12">
            <%= f.cktext_area :body, rows: 10 %>
          </div>
          <!--/.html editor-->
          <!--submit button-->
          <div class="col-sm-12 control-label-left">
              <%= f.submit %>
          </div>
          <!--/.submit button-->
        <% end %>
</div>
<!--/.container-->


<script type="text/javascript">
  
      // page is now ready, initialize the calendar...

    $('#post_date').multiDatesPicker();

</script>