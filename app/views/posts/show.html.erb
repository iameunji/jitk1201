<div class="margin-top"></div>
<div class="container">
    <!-- intro -->
    <div class="row">
        <div class="col-sm-12">
            <h3 class="page-header darkgray">자세히보기
                <small><%= @class_name[params[:class_id].to_i] %></small>
            </h3>
        </div>
    </div>

    <% unless current_user.nil? %>
      <% if current_user.admin==true %>
        <!-- /.intro -->
        <div class="control-label-right">
            <a href="/jung/cawrite" class="btn btn-default">수정하기</a>
        </div>
        <!-- /.control-label-right-->
      <% end %>
    <% end %>
  <br/><br/>
  <!-- class contents -->
  <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8 control-label-center">
        <h2><%= @post.title %></h2>
            <%= image_tag "#{@post.img}", :width => "100%", :class =>"img-hover"%>
        <div>
          <%= @post.body.html_safe %>
        </div>
        <br/>
      </div>
      <div class="col-sm-2"></div>
  </div>
  <!-- /.class contents-->

  <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8 control-label-center">
          <a class="btn btn-default" href="/classes/<%=@post.class_state%>/posts">뒤로가기</a> <a class="btn btn-red-2" href="/classes/<%=@post.class_state%>/apply/<%= @post.id%>">신청하기</a> <br/><br/>
      </div>
      <div class="col-sm-2"></div>
  </div>
  <!-- /.row-->