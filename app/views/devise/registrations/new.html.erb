<div class="margin-top"></div>
<div class="container">
    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-sm-12">
            <h2 class="page-header darkgray">가입하기 <small>정 in the Kitchen</small></h2>
        </div>
    </div>
        <!-- /.row -->
<br/><br/>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
            <div class="container">
                <label class="col-sm-4 control-label-right"></label>
                <div class="col-sm-4">
                    <%= f.text_field :name, autofocus: true, label: "이름" %>
                </div>
            </div>
            <br/>
            <div class="container"> 
                <label class="col-sm-4 control-label-right"></label>
                <div class="col-sm-4">
                    <%= f.email_field :email, label: "이메일" %>
                </div>
            </div><br/>
            <div class="container"> 
                <label class="col-sm-4 control-label-right"></label>
                <div class="col-sm-4">
                    <%= f.password_field :password, autocomplete: "off", label: "비밀번호 (최소 8자리 입력)" %>
               
               <br/>
               <%= f.password_field :password_confirmation, autocomplete: "off", label: "비밀번호 확인" %>
                </div>
            </div>
            <br/>
            <div class="container">    
                <label class="col-sm-4 control-label-right"></label>
                <div class="col-sm-4">
                    <%= f.text_field :mobile, label: "전화번호" %>
                </div>
            </div>
            <br/>
            <div class="container"> 
                <label class="col-sm-4"></label>
                <label class="col-sm-4">관심분야</label>
                <label class="col-sm-4"></label>
                <br/><br/>
                <label class="col-sm-4"></label>
                <div class="col-sm-4 control-label-left">
                    <div class="checkbox">
                    <label><input type="checkbox">성인 요리</label>
                    <label><input type="checkbox">어린이 요리</label>
                    </div>
                </div>
            </div>
            <br/>
            <br/>
            <div class="container">
                <label class="col-sm-4"></label>
                <div class="col-sm-4 control-label-center"> 
                    <button type="submit" class="btn btn-default">가입하기</button> 
                </div>
            </div>
<% end %>
<br/>
            <div class="container">
                <label class="col-sm-4"></label>
                <div class="col-sm-4 control-label-center"> 
                    <%= render "devise/shared/links" %>
                </div>
            </div>


